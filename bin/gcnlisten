#!/usr/bin/env bash

# This is the GCN listener that calls our custom event filter.

# A small note on the remote broadcast servers:
# The machines 68.169.57.253, 209.208.78.170 and 50.116.49.68 are tied to NASA GSFC.
# voevent.transientskp.org	This address is LOFAR.
# voevent.phys.soton.ac.uk	This address is Southampton University.

twistd \
--nodaemon \
--rundir=${HOME}/working/gcn_listener \
--logfile=${HOME}/working/gcn_listener/gcn_logs/gcn_notices.log \
comet \
--quiet \
--eventdb=${TMPDIR} \
--remote=68.169.57.253:8099 \
--remote=209.208.78.170:8099 \
--remote=50.116.49.68:8099 \
--remote=voevent.transientskp.org:8099
--remote=voevent.phys.soton.ac.uk:8099
--action=catch-event
